<h1>Log In!</h1>

<% if flash[:error] %>
  <li style="color:red"><%= flash[:error] %></li>
<% end %>

<%= form_tag "/login" do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %><br>
  <%= label_tag :password %>
  <%= password_field_tag :password %><br>
  <%= submit_tag "Log In" %>
<% end %>

<%= button_to "Back", welcome_1_path, method: :get %>
