<h1>Create a Listing!</h1>

<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <li style="color:red"><%= error %></li>
  <% end %>
<% end %>

<%= form_for @listing do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.submit %>
<% end %>
