<!DOCTYPE html>
<html lang=“en” dir=“ltr”>
 <head>
   <meta charset=“utf-8”>
   <link rel=“stylesheet” href=“app/assets/stylesheets/application.css”>
   <title>New Booking</title>
 </head>
 <body>

  <% if flash[:error] %>
     <% flash[:error].each do |error| %>
       <li style="color:red"><%= error %></li>
     <% end %>
   <% end %>

   <nav class="navbar navbar-expand-md">
     <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
         <ul class="navbar-nav mr-auto">
             <li class="nav-item">
                 <a class="logo navbar-brand" href="<%= welcome_1_path %>"><img src="/images/BestBookingTransparent.jpg" style="max-height: 50px;"></a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" <%= link_to "Listings", listings_path %></a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" <%= link_to "View Profile", user_path(session[:user_id]), method: :get %></a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" <%= link_to "Listings", listings_path %></a>
             </li>
         </ul>
     </div>
     <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
         <ul class="navbar-nav ml-auto">
             <li class="nav-item">
                 <a class="nav-link text-align-right" <%= link_to "Sign Out", logout_path, method: :delete %></a>
             </li>
         </ul>
     </div>
   </nav>

  <div class="container text-center">
    <h1>Create a Booking!</h1>
      <div class="row">
        <div class="col">

        </div>
      <div class="col ">
        <%= form_for @booking do |f| %>
          <%= f.hidden_field :user_id, value: @user.id %>
          <%= f.hidden_field :listing_id, value: @listing.id %>
          <%= f.hidden_field :start_date, value: @booking.start_date %>

          <div style="color:red"><%= flash[:notice] %><br></div>

          <%= f.label :start_date %>
          <%= @booking.start_date %><br>

          <%= f.label :end_date %>
          <%= f.date_field :end_date, min: @booking.start_date %><br>

          <%= f.submit %>
        <% end %>
      </div>

      <div class="col">

      </div>
    </div>
  </div><br>

    <footer class="fixed-bottom text-center">
      <h4>BestBooking!</h4>
      <p>All Rights Reserved &trade;</p>
    </footer>

  </body>

</html>
